<div class="row">
  <h2 class="text-center">My current order</h2>

</div>

<div class="well">
  <div class="row">
    <div class="col-xs-2"><h4 class="text-center">Photo</h4></div>
    <div class="col-xs-3"><h4 class="text-center">Product</h4></div>
    <div class="col-xs-2"><h4 class="text-center">Price</h4></div>
    <div class="col-xs-1"><h4 class="text-center">Quantity</h4></div>
    <div class="col-xs-2"><h4 class="text-center">Total</h4></div>
    <div class="col-xs-2"><h4 class="text-center">Action</h4></div>
  </div>
  <hr style="border-color: black;">
  <% if !@order_item.nil? && @order_item.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @order_item.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
  <% if @order_items.size == 0 %>
      <div class="well">
        <h1 class="text-center">
          There are no items in your shopping cart.
        </h1>

        <h1 class="text-center">Please <%= link_to "go back", products_index_path %> and add some items to your
          cart.
        </h1>
      </div>
  <% else %>
      <% @order_items.each do |order_item| %>

          <%= render 'carts/cart_row', product: order_item.product, order_item: order_item, show_total: true %>

      <% end %>
      <hr style="border-color: black;">
      <div class="row text-right">
        <h2>Order subtotal is <%= number_to_currency current_order.subtotal %></h2>

        <div class="btn-group">
          <%= link_to "Pay this order", "#", class: "btn btn-primary" %>
        </div>
      </div>


  <% end %>
</div>
