<div id="products">
  <h2 class="text-center">Products for Sale</h2>

  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-content modal-header" style="padding:35px 50px;">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4>You must be logged in!</h4>
    </div>
  </div>

  <div class="row">
    <nav class="col-xs-2">
      <div class="nav nav-pills nav-stacked" data-spy="affix" data-offset-top="0">
        <div id="first_menu_block">
          <%= form_tag(products_path, :method => "get", :class => "form-search") do %>
              <div class="input-group">
                <%= text_field_tag 'search', nil, placeholder: 'Search for...', class: "form-control", style: "width:130px" %>
                <span class="input-group-btn">
              <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                </span>
              </div>
          <% end %>
        </div>
        <br>

        <div id="second_menu_block">
          <%= link_to "Low price (< 3$)", products_index_url+"?price=low", class: "btn btn-default", style: "width:169px;" %>
          <br>
          <%= link_to "High price ( > 3$)", products_index_url+"?price=high", class: "btn btn-default", style: "width:169px;" %>
          <br>
          <br>
          <%= link_to "All prices", products_index_url+"?price=all", class: "btn btn-default", style: "width:169px;" %>


        </div>
      </div>
    </nav>
    <div class="col-xs-10">
      <% @products.each do |product| %>
          <%= render "product_row", product: product, order_item: @order_item %>
      <% end %>
    </div>
  </div>
</div>