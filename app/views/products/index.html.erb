<div id="products">
  <h2 class="text-center">Products for Sale</h2>

  <div>
    <div class="col-md-3 col-xs-5 ">
      <div class="nav nav-pills nav-stacked " data-spy="affix" data-offset-top="0">

        <%= content_tag(:div, id: "first_menu_block") do %>
            <%= form_tag(products_path, :method => "get", :class => "form-search") do %>
                <%= text_field_tag('search', nil, placeholder: 'Search for...', class: "bl  search-query") %>
                <button id="search" type="submit" ,class="btn btn-default">
                  <span class="glyphicon glyphicon-search"></span>
                </button>
                <p></p>
            <% end %>
        <% end %>

        <%= content_tag(:div, id: "second_menu_block") do %>
          <h4 class="wtext">Category:</h4>
          <%= link_to "Plant", stroka(request.url, "category=plant"), class: "btn btn-default" %>
          <br>
          <div style="height:2px"></div>
          <%= link_to "Flower", stroka(request.url, "category=flower"), class: "btn btn-default" %>
          <br>

          <div style="height:2px"></div>
          <%= link_to "Bonsay", stroka(request.url, "category=bonsay"), class: "btn btn-default" %>

          <div id="slider">

                <p>
                  <%= label_tag 'amount', 'Price range:', class: 'wtext h4' %>
                  <%= text_field_tag 'amount', nil, :readonly => true %>
                </p>

                <%= content_tag(:div, nil, id: 'slider-range') %>
                <p></p>

                <div style="width: 100%" class="text-center">
                  <%= link_to "Filter price","",  id:"ssilka", class:"btn btn-default" %>
                </div>

            <br>



            <%= link_to "Reset filters", products_path, class: "btn btn-default" %>
          </div>
        <% end %>

      </div>
    </div>
    <div class="col-md-9 col-xs-7 ">
      <% @products.each do |product| %>
          <%= render "product_row", product: product, order_item: @order_item %>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="modal" role="dialog">
  <div class="modal-dialog modal-content modal-header" style="padding:35px 50px;">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4>You must be logged in!</h4>
  </div>
</div>