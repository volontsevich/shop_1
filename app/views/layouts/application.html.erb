<!DOCTYPE html>
<html>
<head>
  <title>Viktor's first shop</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <% if request.ssl? %>
      <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
      <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
  <% else %>
      <%= stylesheet_link_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
      <%= javascript_include_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
  <% end %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
  <div id="header" class=" navbar navbar-default navbar-fixed-top row without_margin header_top">

    <div id="header_top" class="row without_margin">

      <div class="col-xs-5 text-right">
        <%= image_tag "velo.png", style: "height:80px" %>
      </div>

      <div class="col-xs-2">
        <div class="row  text-center" style="height: 80px;">
          <%= link_to "Plants Store", products_index_path, class: "store h1 vcenter", style: "text-decoration: none;font-style: italic;" %>
        </div>
      </div>

      <div class="col-xs-5 text-left">

      </div>


    </div>
    <div id="header_links" class="row without_margin">
      <div class="row text-center"style="padding-left:10px;padding-left:10px;margin-left:0;margin-right:0;">
        <div class="col-xs-2 plants-menu clickable-area" data-href=<%= home_index_path %>>
          <span class="text-center"><%= link_to "Main", home_index_path, class: "store", style: "text-decoration: none" %></span>
        </div>

        <div class="col-xs-2 plants-menu clickable-area" data-href=<%= products_index_path %>>
          <span class="text-center"><%= link_to "Products", products_index_path, class: "store", style: "text-decoration: none" %></span>
        </div>

        <div class="col-xs-2 plants-menu clickable-area" data-href=<%= home_contacts_path %>>
          <span class="text-center"><%= link_to "Contacts", home_contacts_path, class: "store", style: "text-decoration: none" %></span>
        </div>

        <div class="col-xs-2 plants-menu clickable-area" data-href=<%= home_delivery_path %>>
          <span class="glyphicon glyphicon-envelope"style="color: #ffdd35;font-size: small"></span><%= link_to " Delivery", home_delivery_path, class: "store", style: "text-decoration: none" %>
        </div>
        <div class="col-xs-2 plants-menu clickable-area" data-href=<%= carts_show_path %>>
          <% if !current_order.nil? %>
              <div class="cart-text"><%= render 'layouts/cart_text' %></div>
          <% end %>
        </div>
        <div class="col-xs-2 plants-menu ">


          <span data-toggle="dropdown" class="store">       <% if user_signed_in? %>            <%= current_user.email %>       <% else %>           Login       <% end %>
            <span class="caret"></span>   </span>
          <ul class="dropdown-menu" role="menu">
            <% if user_signed_in? %>
                <li><%= link_to "Current cart", cart_path %></li>
                <li><%= link_to "My orders", orders_index_path %></li>
                <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
            <% else %>
                <li><%= link_to "Sign in", new_user_session_path %></li>
                <li><%= link_to "Sign up", new_user_registration_path %></li>
            <% end %> </ul>


        </div>


      </div>
    </div>

  </div>
  <div class="container main">

    <%= yield %>

  </div>

  <div id="page-boofer">
  </div>

</div>

<div id="footer"  style="color:#690c16;">

    <div class="col-xs-6">
      <p>2015 Â© All Rights Reserved</p>
    </div>
    <div class="col-xs-6 text-right">
      <p>Plants shop</p>
    </div>

</div>

</body>
</html>